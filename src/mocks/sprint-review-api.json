{
  "createSprintReview": {
    "endpoint": "POST /api/sprint-review/sessions",
    "request": {
      "teamId": "string",
      "sprintNumber": "number",
      "sprintGoal": "string",
      "completedStories": ["string"],
      "incompletedStories": ["string"]
    },
    "responses": {
      "success": {
        "status": 201,
        "body": {
          "success": true,
          "data": {
            "id": "string",
            "teamId": "string",
            "sprintNumber": "number",
            "sprintGoal": "string",
            "status": "active",
            "createdAt": "string"
          }
        }
      }
    }
  },
  "addDemoItem": {
    "endpoint": "POST /api/sprint-review/sessions/{id}/demos",
    "request": {
      "storyId": "string",
      "title": "string",
      "description": "string",
      "demoUrl": "string",
      "presenterId": "string"
    },
    "responses": {
      "success": {
        "status": 201,
        "body": {
          "success": true,
          "data": {
            "id": "string",
            "title": "string",
            "description": "string",
            "demoUrl": "string",
            "presenter": "string",
            "feedback": [],
            "createdAt": "string"
          }
        }
      }
    }
  },
  "addFeedback": {
    "endpoint": "POST /api/sprint-review/demos/{id}/feedback",
    "request": {
      "content": "string",
      "type": "positive|negative|suggestion",
      "priority": "high|medium|low"
    },
    "responses": {
      "success": {
        "status": 201,
        "body": {
          "success": true,
          "data": {
            "id": "string",
            "content": "string",
            "type": "string",
            "priority": "string",
            "authorId": "string",
            "createdAt": "string"
          }
        }
      }
    }
  },
  "getSprintMetrics": {
    "endpoint": "GET /api/sprint-review/sessions/{id}/metrics",
    "responses": {
      "success": {
        "status": 200,
        "body": {
          "success": true,
          "data": {
            "plannedStoryPoints": "number",
            "completedStoryPoints": "number",
            "velocity": "number",
            "burndownData": [
              {
                "day": "string",
                "remaining": "number",
                "ideal": "number"
              }
            ],
            "completionRate": "number"
          }
        }
      }
    }
  },
  "generateSprintReport": {
    "endpoint": "POST /api/sprint-review/sessions/{id}/report",
    "responses": {
      "success": {
        "status": 200,
        "body": {
          "success": true,
          "data": {
            "reportUrl": "string",
            "summary": {
              "completedStories": "number",
              "totalStories": "number",
              "storyPoints": "number",
              "keyAchievements": ["string"],
              "challenges": ["string"],
              "improvements": ["string"]
            }
          }
        }
      }
    }
  }
}

