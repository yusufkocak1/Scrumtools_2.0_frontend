{
  "login": {
    "endpoint": "POST /api/auth/login",
    "request": {
      "email": "string",
      "password": "string"
    },
    "responses": {
      "success": {
        "status": 200,
        "body": {
          "success": true,
          "data": {
            "user": {
              "id": "string",
              "email": "string",
              "firstName": "string",
              "lastName": "string",
              "preferences": "Map<string, any>"
            },
            "token": "string"
          }
        }
      },
      "error": {
        "status": 401,
        "body": {
          "success": false,
          "error": "Geçersiz e-posta veya şifre"
        }
      }
    }
  },
  "signup": {
    "endpoint": "POST /api/auth/signup",
    "request": {
      "firstName": "string",
      "lastName": "string",
      "email": "string",
      "password": "string"
    },
    "responses": {
      "success": {
        "status": 201,
        "body": {
          "success": true,
          "data": {
            "user": {
              "id": "string",
              "email": "string",
              "firstName": "string",
              "lastName": "string"
            },
            "token": "string"
          }
        }
      },
      "error": {
        "status": 400,
        "body": {
          "success": false,
          "error": "E-posta adresi zaten kullanımda"
        }
      }
    }
  },
  "logout": {
    "endpoint": "POST /api/auth/logout",
    "request": {
      "headers": {
        "Authorization": "Bearer {token}"
      }
    },
    "responses": {
      "success": {
        "status": 200,
        "body": {
          "success": true,
          "message": "Başarıyla çıkış yapıldı"
        }
      }
    }
  },
  "getUserProfile": {
    "endpoint": "GET /api/auth/profile",
    "request": {
      "headers": {
        "Authorization": "Bearer {token}"
      }
    },
    "responses": {
      "success": {
        "status": 200,
        "body": {
          "success": true,
          "data": {
            "id": "string",
            "email": "string",
            "firstName": "string",
            "lastName": "string",
            "createdAt": "string",
            "updatedAt": "string"
          }
        }
      },
      "error": {
        "status": 401,
        "body": {
          "success": false,
          "error": "Geçersiz token"
        }
      }
    }
  }
}

